<div class="contaner">
	
	<div class="sidebar">
			<ul>
				<li><%= link_to "基本情報",	new_post_path %></li>
			</ul>
	</div>

	<div class="body">
		<% @post.errors.full_messages.each do |message| %>
        <div class="errors_message">
        <%= message %>
        </div>
    <% end %>

		<%= form_with model: @post do |f| %>

		<div class="card" style="width: 54rem;">
  		<div class="card-header">ルーム情報登録</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<label for="name">ルーム名</label><%= f.text_field :name, placeholder: "ルーム名を入力" %>
				</li>
				<li class="list-group-item">
					<label for="introduce">ルーム紹介</label><%= f.text_area :introduce, placeholder: "ルーム説明を入力" %>
				</li>
				<li class="list-group-item">
					<label for="price">料金</label><%= f.text_field :price, placeholder: "1日あたりの料金を入力" %>
				</li>
				<li class="list-group-item">
					<label for="address">住所</label><%= f.text_field :address, placeholder: "住所を入力" %>
				</li>
				<li class="list-group-item">
					<label for="image_name">ルーム画像</label><%= f.file_field :image_name, placeholder: "ファイルを選択　" %>
				</li>
				<li class="list-group-item">
					<input type="submit" value="登録" class="btn btn-sm btn-danger">
				</li>
			</ul>
		</div>

		<% end %>

</div>